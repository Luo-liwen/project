@model MyMVCDemoo.Models.ViewModels.Account.RegisterModel

@{
    ViewData["Title"] = "Register";
}

<h1>注册</h1>

<hr />
<div class="row" >
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="昵称" class="control-label"></label>
                <input asp-for="昵称" class="form-control" />
                <span asp-validation-for="昵称" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="生日" class="control-label"></label>
                <input asp-for="生日" class="form-control" />
                <span asp-validation-for="生日" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="性别" class="control-label"></label>
                @*<input asp-for="性别" class="form-control" />*@
                @Html.EditorFor(model => model.性别, new {htmlAttributes=new {@class="form-control"}}) 
                <span asp-validation-for="性别" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="邮箱" class="control-label"></label>
                <input asp-for="邮箱" class="form-control" />
                <span asp-validation-for="邮箱" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="密码" class="control-label"></label>
                <input asp-for="密码" class="form-control" />
                <span asp-validation-for="密码" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="确认密码" class="control-label"></label>
                <input asp-for="确认密码" class="form-control" />
                <span asp-validation-for="确认密码" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="确定" class="btn btn-primary myconfirm" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">返回首页</a>
  
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}



}
